{
  "name": "covod-web-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "npm run test -- --watchAll false --coverage",
    "storybook:start": "start-storybook -p 9010 -s public",
    "storybook:build": "build-storybook -s public",
    "lint": "eslint . --ext .{js,jsx,ts,tsx}",
    "format": "prettier --write \"**/*.+(js|ts|tsx|json|scss|css|md|mdx|html)\""
  },
  "dependencies": {
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^5.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.0.1",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-docs": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/preset-create-react-app": "^2.1.0",
    "@storybook/react": "^5.3.17",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "react-scripts": "3.4.0",
    "source-map-explorer": "^2.4.0",
    "themeprovider-storybook": "^1.4.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,mdx,html}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "npm run lint -- --fix",
      "npm run test -- --watchAll false --bail --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(ts|tsx|js|jsx)",
      "!**/*.stories.*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
